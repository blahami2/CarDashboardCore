<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/card_theme"
    android:clickable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:clickable="false">


        <LinearLayout
            style="@style/card_mini_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginTop="@dimen/card_submenu_margin_outer"
            android:layout_marginLeft="@dimen/card_submenu_margin_outer"
            android:layout_marginRight="@dimen/card_submenu_margin_inner"
            android:layout_marginBottom="@dimen/card_submenu_margin_inner"
            android:clickable="false">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close_black_24dp"
                style="@style/card_icon" />
        </LinearLayout>

        <LinearLayout
            style="@style/card_mini_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginTop="@dimen/card_submenu_margin_outer"
            android:layout_marginRight="@dimen/card_submenu_margin_outer"
            android:layout_marginLeft="@dimen/card_submenu_margin_inner"
            android:layout_marginBottom="@dimen/card_submenu_margin_inner"
            android:clickable="false">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_open_with_black_24dp"
                style="@style/card_icon" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:clickable="false">


        <LinearLayout
            style="@style/card_mini_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginBottom="@dimen/card_submenu_margin_outer"
            android:layout_marginLeft="@dimen/card_submenu_margin_outer"
            android:layout_marginRight="@dimen/card_submenu_margin_inner"
            android:layout_marginTop="@dimen/card_submenu_margin_inner"
            android:clickable="false">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete_black_24dp"
                style="@style/card_icon" />
        </LinearLayout>

        <LinearLayout
            style="@style/card_mini_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginBottom="@dimen/card_submenu_margin_outer"
            android:layout_marginRight="@dimen/card_submenu_margin_outer"
            android:layout_marginLeft="@dimen/card_submenu_margin_inner"
            android:layout_marginTop="@dimen/card_submenu_margin_inner"
            android:clickable="false">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_more_horiz_black_24dp"
                style="@style/card_icon"
                android:background="?android:attr/selectableItemBackground" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>